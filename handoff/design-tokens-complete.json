          },
          "bodyLarge": {
            "size": "24px",
            "lineHeight": "1.4",
            "fontFamily": "Inter",
            "fontWeight": "400",
            "cssVariable": "--text-body-large-desktop",
            "usage": "Hero subheadings, large body text"
          },
          "bodyStandard": {
            "size": "20px",
            "lineHeight": "1.4",
            "fontFamily": "Inter",
            "fontWeight": "400",
            "cssVariable": "--text-body-desktop",
            "usage": "Standard paragraph text"
