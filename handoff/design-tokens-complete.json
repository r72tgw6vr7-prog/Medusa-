        "breakpoint": "768px - 1199px",
        "scalingMethod": "Desktop × 0.78 (display), Desktop × 0.83 (headings), Desktop × 1.0 (body)",
        "sizes": {
          "displayXL": {
            "size": "56px",
            "lineHeight": "1.1",
            "fontFamily": "Playfair Display",
            "fontWeight": "700",
            "cssVariable": "--text-headline-xl-tablet",
            "calculation": "72px × 0.78 = 56px"
          },
          "headlineLG": {
            "size": "40px",
            "lineHeight": "1.1",
            "fontFamily": "Playfair Display",
            "fontWeight": "700",
            "cssVariable": "--text-headline-lg-tablet",
            "calculation": "48px × 0.83 = 40px"
          },
          "headlineMD": {
            "size": "32px",
            "lineHeight": "1.1",
            "fontFamily": "Playfair Display",
            "fontWeight": "600",
            "cssVariable": "--text-headline-md-tablet",
            "calculation": "36px × 0.83 = 32px"
          },
          "bodyLarge": {
            "size": "24px",
            "lineHeight": "1.4",
            "fontFamily": "Inter",
            "fontWeight": "400",
            "cssVariable": "--text-body-large-tablet",
            "calculation": "24px × 1.0 = 24px"
          },
          "bodyStandard": {
            "size": "20px",
            "lineHeight": "1.4",
            "fontFamily": "Inter",
            "fontWeight": "400",
            "cssVariable": "--text-body-tablet",
            "calculation": "20px × 1.0 = 20px"
          },
