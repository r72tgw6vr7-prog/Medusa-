  "typography": {
    "fonts": {
      "heading": {
        "family": "Playfair Display",
        "fallback": "serif",
        "cssImport": "@import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700;800;900&display=swap');",
        "cssVariable": "--font-headline",
        "usage": "ALL headlines (H1, H2, H3, H4, H5, H6)",
        "mandatoryRule": "NO generic fonts, NO Cormorant Garamond, ONLY Playfair Display for headlines"
      },
      "body": {
        "family": "Inter",
        "fallback": "sans-serif",
        "cssImport": "@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap');",
        "cssVariable": "--font-body",
        "usage": "ALL body text, buttons, labels, captions, navigation"
      }
    },
    
    "scale": {
      "desktop": {
        "breakpoint": "1200px+",
        "sizes": {
          "displayXL": {
            "size": "72px",
            "lineHeight": "1.1",
