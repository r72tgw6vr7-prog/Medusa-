            "size": "18px",
            "lineHeight": "1.4",
            "fontFamily": "Inter",
            "fontWeight": "400",
            "cssVariable": "--text-body-small-tablet",
            "calculation": "18px × 1.0 = 18px"
          }
        }
      },
      
      "mobile": {
        "breakpoint": "320px - 767px",
        "scalingMethod": "Desktop × 0.56 (display), Desktop × 0.72 (headings), max(Desktop × 0.89, 16px minimum)",
        "minimumFontSize": "16px",
        "sizes": {
          "displayXL": {
            "size": "40px",
            "lineHeight": "1.1",
            "fontFamily": "Playfair Display",
            "fontWeight": "700",
            "cssVariable": "--text-headline-xl-mobile",
            "calculation": "72px × 0.56 = 40px"
          },
          "headlineLG": {
            "size": "32px",
            "lineHeight": "1.1",
            "fontFamily": "Playfair Display",
            "fontWeight": "700",
            "cssVariable": "--text-headline-lg-mobile",
            "calculation": "48px × 0.72 = 32px"
          },
          "headlineMD": {
            "size": "24px",
            "lineHeight": "1.1",
            "fontFamily": "Playfair Display",
            "fontWeight": "600",
            "cssVariable": "--text-headline-md-mobile",
            "calculation": "36px × 0.72 = 24px"
          },
          "bodyLarge": {
            "size": "24px",
            "lineHeight": "1.4",
            "fontFamily": "Inter",
            "fontWeight": "400",
            "cssVariable": "--text-body-large-mobile",
            "calculation": "max(24px × 0.89, 16px) = 24px"
          },
          "bodyStandard": {
            "size": "16px",
            "lineHeight": "1.4",
            "fontFamily": "Inter",
            "fontWeight": "400",
            "cssVariable": "--text-body-mobile",
            "calculation": "max(20px × 0.89, 16px) = 16px (minimum enforced)"
          },
          "bodySmall": {
            "size": "16px",
            "lineHeight": "1.4",
            "fontFamily": "Inter",
            "fontWeight": "400",
            "cssVariable": "--text-body-small-mobile",
            "calculation": "max(18px × 0.89, 16px) = 16px (minimum enforced)"
          }
        }
