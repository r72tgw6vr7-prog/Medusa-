        "active": {
          "background": "#D4AF37",
          "border": "2px solid #D4AF37",
          "color": "#222222",
          "boxShadow": "0 0 20px rgba(212, 175, 55, 0.3)"
        },
        "complete": {
          "background": "#D4AF37",
          "border": "2px solid #D4AF37",
          "color": "#222222"
        }
      }
    },
    
    "progressBar": {
      "name": "Progress Bar",
      "states": {
        "track": {
          "background": "rgba(192, 192, 192, 0.2)",
          "height": "4px",
          "borderRadius": "2px"
        },
        "fill": {
          "background": "linear-gradient(90deg, #D4AF37, #C19B26)",
