          "animation": "spin 1s linear infinite",
          "width": "40px",
          "height": "40px"
        }
      }
    },
    
    "skeleton": {
      "name": "Skeleton Loader",
      "states": {
        "default": {
          "background": "linear-gradient(90deg, rgba(192, 192, 192, 0.1) 0%, rgba(212, 175, 55, 0.1) 50%, rgba(192, 192, 192, 0.1) 100%)",
          "backgroundSize": "200% 100%",
          "animation": "shimmer 2s ease-in-out infinite"
        }
      }
    }
  },
  
  "microInteractions": {
    "goldGlow": {
      "name": "Magnetic Gold Glow Effect",
      "description": "Proximity-based glow that intensifies as cursor approaches",
      "parameters": {
        "radius": "32px",
        "intensity": "0.4",
        "transition": "all 0.3s cubic-bezier(0.4, 0, 0.2, 1)"
      }
    },
    
    "parallax": {
      "name": "Parallax Scroll Effect",
      "parameters": {
        "mainLayer": "0.08",
        "backgroundLayer": "0.04",
        "description": "Subtle depth effect on scroll (8% main, 4% background)"
      }
    },
    
    "breathing": {
      "name": "Breathing Animation",
      "description": "Subtle pulsing effect for attention",
      "parameters": {
        "duration": "3s",
        "timing": "cubic-bezier(0.37, 0, 0.63, 1)",
        "scale": "1.0 to 1.02"
      }
    }
  },
  
  "animations": {
    "fadeIn": {
      "name": "Fade In",
      "keyframes": "opacity 0 to 1",
      "duration": "0.5s",
      "timing": "ease-in-out"
    },
    
    "slideUp": {
      "name": "Slide Up",
      "keyframes": "transform translateY(20px) to translateY(0), opacity 0 to 1",
      "duration": "0.5s",
      "timing": "cubic-bezier(0.4, 0, 0.2, 1)"
    },
    
    "goldPulse": {
      "name": "Gold Pulse",
      "keyframes": "box-shadow 0 0 10px rgba(212, 175, 55, 0.2) to 0 0 30px rgba(212, 175, 55, 0.4)",
      "duration": "2s",
      "timing": "ease-in-out",
      "iteration": "infinite"
    }
  }
