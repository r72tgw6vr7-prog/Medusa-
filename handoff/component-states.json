      "name": "Checkbox",
      "states": {
        "unchecked": {
          "background": "transparent",
          "border": "2px solid #C0C0C0",
          "width": "20px",
          "height": "20px",
          "borderRadius": "4px"
        },
        "checked": {
          "background": "#D4AF37",
          "border": "2px solid #D4AF37",
          "color": "#222222"
        },
        "focus": {
          "outline": "2px solid #D4AF37",
          "outlineOffset": "2px"
        }
      }
    }
  },
  
  "navigation": {
