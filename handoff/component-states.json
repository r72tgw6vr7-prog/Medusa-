        },
        "focus": {
          "border": "2px solid #D4AF37",
          "boxShadow": "0 0 10px rgba(212, 175, 55, 0.2)"
        }
      }
    },
    
    "select": {
      "name": "Select Dropdown",
      "states": {
        "default": {
          "background": "rgba(34, 34, 34, 0.8)",
          "border": "1px solid rgba(192, 192, 192, 0.3)",
          "color": "#FFFFFF",
          "borderRadius": "8px",
          "minHeight": "44px",
          "padding": "12px 16px"
        },
        "open": {
          "border": "2px solid #D4AF37",
          "boxShadow": "0 0 10px rgba(212, 175, 55, 0.2)"
