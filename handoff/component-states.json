        "focus": {
          "outline": "2px solid #D4AF37",
          "outlineOffset": "2px",
          "borderRadius": "4px"
        }
      }
    }
  },
  
  "cards": {
    "serviceCard": {
      "name": "Premium Service Card",
      "states": {
        "default": {
          "background": "linear-gradient(145deg, rgba(34, 34, 34, 0.85), rgba(34, 34, 34, 0.95))",
          "backdropFilter": "blur(8px)",
          "border": "1px solid rgba(192, 192, 192, 0.15)",
          "borderRadius": "12px",
          "boxShadow": "none",
          "transform": "none"
        },
        "hover": {
          "border": "1px solid rgba(212, 175, 55, 0.4)",
          "boxShadow": "0 0 20px rgba(212, 175, 55, 0.3), 0 8px 32px rgba(0, 0, 0, 0.3)",
          "transform": "translateY(-4px)",
          "transition": "all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94)"
        },
        "focus": {
          "outline": "2px solid #D4AF37",
          "outlineOffset": "2px"
        }
      }
    },
    
    "artistCard": {
      "name": "Artist Showcase Card",
      "states": {
        "default": {
          "background": "linear-gradient(145deg, rgba(34, 34, 34, 0.85), rgba(34, 34, 34, 0.95))",
          "backdropFilter": "blur(8px)",
          "border": "1px solid rgba(192, 192, 192, 0.15)",
          "borderRadius": "12px",
          "transform": "none"
        },
        "hover": {
          "border": "1px solid rgba(212, 175, 55, 0.4)",
          "boxShadow": "0 0 20px rgba(212, 175, 55, 0.3), 0 8px 32px rgba(0, 0, 0, 0.3)",
          "transform": "translateY(-2px)"
        },
        "featured": {
          "border": "2px solid #C0C0C0",
          "boxShadow": "0 0 30px rgba(192, 192, 192, 0.2)"
        }
      }
    }
  },
  
  "inputs": {
    "textInput": {
      "name": "Text Input Field",
      "states": {
        "default": {
          "background": "rgba(34, 34, 34, 0.8)",
          "border": "1px solid rgba(192, 192, 192, 0.3)",
