{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "vite",
  "buildCommand": "npm run build:force",
  "outputDirectory": "dist",
  "installCommand": "npm ci",
  "redirects": [
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "medusa-tattoo.com" }],
      "destination": "https://www.muenchen-tattoo-studio.de/:path*",
      "permanent": true
    },
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "www.medusa-tattoo.com" }],
      "destination": "https://www.muenchen-tattoo-studio.de/:path*",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/((?!.*\\..*|assets/|favicon|robots\\.txt|sitemap\\.xml).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
